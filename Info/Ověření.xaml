<Window x:Class="Info.Ověření"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ověření" Height="136" Width="332" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <PasswordBox x:Name="hesloBox" Margin="10,44,10,7" Grid.ColumnSpan="2" ToolTip="Sem zadej heslo a nečum na to tak dlouho" FontSize="32"/>
        <Button x:Name="enterButton" Content="Vstoupit" Margin="0,9,10,0" Grid.Column="1" Click="enterButton_Click" Height="29" VerticalAlignment="Top" HorizontalAlignment="Right" Width="161"/>
        <Label Content="Zadejte vstupní heslo" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>
    </Grid>
</Window>
