<Window x:Class="Info.OdeslatNázor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Odeslat názor" Height="396" Width="594" Closing="Window_Closing">
    <Grid>
        <Button Content="Odeslat" Margin="10,0,10,10" Height="36" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Label Content="Předmět" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="předmětTextBox" Margin="70,12,103,0" TextWrapping="Wrap" Text="Sem zadejte předmět svojí zprávy" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="textZprávyTextBox" TextWrapping="Wrap" Text="Sem napište svou připomínku/nápad/zprávu" Margin="10,43,10,51"/>
        <CheckBox Content="Zaslat log file" HorizontalAlignment="Left" Margin="488,15,0,0" VerticalAlignment="Top" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Checked"/>

    </Grid>
</Window>
